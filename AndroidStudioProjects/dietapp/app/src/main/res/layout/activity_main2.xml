<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="96dp"
        android:textColor="#000000"
        android:text="체성분"/>

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/body"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-96dp"
        android:layout_marginStart="107dp"
        android:textColor="#000000"
        android:text="몸무게" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight"
        android:layout_below="@+id/body"
        android:text="목표체중"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton5"
        android:layout_below="@+id/body"
        android:text="키(cm)"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/body"
        android:layout_marginTop="175dp"
        android:text="칼로리"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/nut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/body"
        android:layout_marginTop="237dp"

        android:text="영양소"
        android:textColor="#000000" />


    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/goal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:background="#000000" />


    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="39dp"
        android:layout_above="@+id/line6"
        android:layout_alignStart="@+id/line1"
        android:layout_marginBottom="11dp"
        android:background="#000000" />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/line1"
        android:layout_below="@+id/line6"
        android:layout_centerVertical="true"
        android:layout_marginTop="19dp"
        android:background="#000000" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/line"
        android:background="#000000" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:background="#000000" />

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eon"
        android:background="#000000" />


    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_goal"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_hei"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/goal"
        android:layout_toEndOf="@+id/height"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/eum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cal"
        android:layout_alignStart="@+id/weight"
        android:layout_marginBottom="-184dp"
        android:textColor="#000000"
        android:text="음식" />

    <TextView
        android:id="@+id/eon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight"
        android:layout_below="@+id/cal"
        android:text="운동"
        android:textColor="#000000" />

    <ProgressBar
        android:id="@+id/food_pro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:layout_above="@+id/cal"
        android:layout_marginBottom="-184dp"
        android:layout_toEndOf="@+id/goal" />

    <ProgressBar
        android:id="@+id/exer_pro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cal"
        android:layout_toEndOf="@+id/goal"
        android:progress="0" />

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="66dp"

        android:layout_above="@+id/line3"
        android:layout_alignParentEnd="true">

        <TableLayout
            android:layout_width="275dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="234dp"
            android:layout_marginEnd="42dp">


            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:background="#53a2c8"
                    android:text="116.9g\n(탄수화물)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#7abcc6"
                    android:text="30.7g\n(지방)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"


                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#ee5e78"
                    android:text="75.8g\n(단백질)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"

                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#f1cd6d"
                    android:text="9.8g\n(당)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"


                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#cd9076"
                    android:text="1127mg\n(나트륨)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"

                    ></TextView>


            </TableRow>

        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bre_btn"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="183dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/circle_btn"
        android:text="kcal" />

    <Button
        android:id="@+id/lun_btn"
        android:layout_width="75dp"
        android:layout_height="76dp"

        android:layout_alignTop="@+id/bre_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_btn"
        android:text="kcal" />


    <Button
        android:id="@+id/din_btn"
        android:layout_width="75dp"
        android:layout_height="76dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bre_btn"
        android:layout_marginEnd="34dp"
        android:background="@drawable/circle_btn"
        android:text="kcal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="144dp"
        android:layout_toEndOf="@+id/body"
        android:text="아침"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

        android:text="점심" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton2"

        android:layout_alignTop="@+id/textView"
        android:text="저녁"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="261dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/body"
        android:layout_marginBottom="58dp"
        app:srcCompat="@drawable/aa" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignEnd="@+id/edit_hei"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_marginEnd="0dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/info_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bre_btn"
        android:layout_marginBottom="78dp"
        android:text="배변활동 및 노트"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/goal_weight"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/line1"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_toStartOf="@+id/goal_weight"
        android:onClick="forward"
        android:text="앞으로" />
</RelativeLayout>